<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.example.org/ShortCV" elementFormDefault="qualified" xmlns:shortCV="http://www.example.org/ShortCV">

    <element name="shortCV" type="shortCV:cvType"></element>

    <complexType name="cvType">
    	<sequence>
    		<element name="personalInformation" type="shortCV:personalInfoType"></element>
    		<element name="contactInformation" type="shortCV:contactInfoType"></element>
    		<element name="education" type="shortCV:educationType"></element>
    		<element name="jobInformation" type="shortCV:jobInfoType"></element>
    	</sequence>
    	<attribute name="name" type="string" use="required"></attribute>
    </complexType>



    <complexType name="educationType">
    	<sequence>
    		<element name="place" type="string"></element>
    		<element name="peroid" type="string"></element>
    		<element name="degree">
    			<simpleType>
    				<restriction base="string">
    					<enumeration value="bachelor"></enumeration>
    					<enumeration value="master"></enumeration>
    					<enumeration value="doctor"></enumeration>
    				</restriction>
    			</simpleType>
    		</element>
    	</sequence>
    </complexType>
    

    <complexType name="personalInfoType">
    	<sequence>
    		<element name="age" type="int"></element>
    		<element name="country" type="string"></element>
    	</sequence>
    </complexType>
    
    <complexType name="jobInfoType">
    	<sequence>
    		<element name="currentJob" type="string"></element>
    		<element name="employmentTerm" type="string"></element>
    		<element name="location" type="string"></element>
    	</sequence>
    </complexType>
    
    <complexType name="contactInfoType">
    	<sequence>
    		<element name="email" type="string"></element>
    		<element name="phoneNo." type="int"></element>
    	</sequence>
    </complexType>
</schema>